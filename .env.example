# Environment configuration for ML Classifier
# Copy this file to .env and modify as needed

# Logging configuration
LOG_LEVEL=INFO

# API configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Configuration files
EXPERIMENT_CONFIG=configs/experiment_default.yaml
SERVING_CONFIG=configs/serving.yaml

# Docker build arguments
PYTHON_VERSION=3.11

# Development settings
RELOAD=false
DEBUG=false

# Model paths
MODEL_DIR=models
DATA_DIR=data
RESULTS_DIR=results
LOGS_DIR=logs

# Training configuration
RANDOM_SEED=42
TEST_SIZE=0.2
CV_FOLDS=5

# Resource limits (for production deployment)
MEMORY_LIMIT=2g
CPU_LIMIT=1.0